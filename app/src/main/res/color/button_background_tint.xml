<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed / focused state uses the requested light orange -->
    <item android:color="@color/button_pressed" android:state_pressed="true"/>
    <item android:color="@color/button_pressed" android:state_focused="true"/>
    <!-- default uses the light beige background -->
    <item android:color="@color/button_bg"/>
</selector>
